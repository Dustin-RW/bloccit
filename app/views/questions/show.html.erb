<h1><%= @question.title %></h1>
<p><%= @question.body %></p>
<p><strong>Resolved:</strong><%= @question.resolved %></p>

<div class="col-md-4">
    <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>
    <%= link_to "Back to Home", questions_path, class: 'btn btn-success' %>
<%= link_to "Delete Question", @question, method: :delete, class: 'btn btn-danger',
      data: {confirm: 'Are you sure you want to delete this question?'} %>
</div>
